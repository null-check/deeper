<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_blue_dark"
    app:carbon_cornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:layout_weight="1">

            <include
                android:id="@+id/child_1"
                layout="@layout/view_subcell" />

            <include
                android:id="@+id/child_2"
                layout="@layout/view_subcell" />

            <include
                android:id="@+id/child_3"
                layout="@layout/view_subcell" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:layout_weight="1">

            <include
                android:id="@+id/child_4"
                layout="@layout/view_subcell" />

            <include
                android:id="@+id/child_5"
                layout="@layout/view_subcell" />

            <include
                android:id="@+id/child_6"
                layout="@layout/view_subcell" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:layout_weight="1">

            <include
                android:id="@+id/child_7"
                layout="@layout/view_subcell" />

            <include
                android:id="@+id/child_8"
                layout="@layout/view_subcell" />

            <include
                android:id="@+id/child_9"
                layout="@layout/view_subcell" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/child_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:text="0"
        android:textColor="@color/white_overlay"
        android:textSize="60sp"/>
</carbon.widget.FrameLayout>