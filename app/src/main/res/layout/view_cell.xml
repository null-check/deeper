<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/carbon_marginHalf"
    android:paddingRight="@dimen/carbon_marginHalf"
    android:background="#33b5e5"
    android:orientation="vertical"
    app:carbon_rippleColor="@color/carbon_white"
    app:carbon_cornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/carbon_marginHalf"
        android:layout_weight="1">

        <include
            android:id="@+id/child_1"
            layout="@layout/view_subcell" />

        <include
            android:id="@+id/child_2"
            layout="@layout/view_subcell" />

        <include
            android:id="@+id/child_3"
            layout="@layout/view_subcell" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/carbon_marginHalf"
        android:layout_weight="1">

        <include
            android:id="@+id/child_4"
            layout="@layout/view_subcell" />

        <include
            android:id="@+id/child_5"
            layout="@layout/view_subcell" />

        <include
            android:id="@+id/child_6"
            layout="@layout/view_subcell" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/carbon_marginHalf"
        android:layout_weight="1">

        <include
            android:id="@+id/child_7"
            layout="@layout/view_subcell" />

        <include
            android:id="@+id/child_8"
            layout="@layout/view_subcell" />

        <include
            android:id="@+id/child_9"
            layout="@layout/view_subcell" />
    </LinearLayout>
</carbon.widget.LinearLayout>